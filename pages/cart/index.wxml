<view class="cart">
<!-- 地址 -->
  <view class="addAddress" wx:if="{{!address.name}}">
    <button type="primary" plain="{{true}}" bindtap="chooseAddress">获取收货地址</button>
  </view>
  <view class="info" wx:else>
    <view class="infoAddress">
      <view class="left">{{address.name}}</view>
      <view class="bottom">{{address.addressInfo}}</view>
    </view>
    <view class="right">{{address.phone}}</view> 
  </view>
  <!-- 购物车内容 -->
  <view class="cartContent">
    <view class="cartTitle">购物车</view>
    <view>
      <block wx:if="{{cart.length}}">
        <view class="cartList"
          wx:for="{{cart}}"
          wx:key="goods_id"
        >
          <view class="check">
            <checkbox-group data-id="{{item.goods_id}}" bindchange="handleCheck">
              <checkbox checked="{{item.checked}}"  />
            </checkbox-group>
          </view>
          <view class="cartImg">
            <image mode="widthFix" src="{{item.goods_small_logo}}" />
          </view>
          <view class="cartInfo">
            <view class="goodsName">{{item.goods_name}}</view>      
            <view class="priceGroup">
              <view class="price">￥{{item.goods_price}}</view>
              <view class="num">
                <view class="one"
                      bindtap="changeNum"
                      data-id="{{item.goods_id}}"
                      data-num = "{{-1}}"
                >-</view>
                <view class="center"> 
                {{item.num}}
                </view>
                <view class="one"
                      bindtap="changeNum"
                      data-id="{{item.goods_id}}"
                      data-num = "{{1}}"
                >+</view>
              </view>
            </view>      
          </view>
        </view>
      </block>
      <block wx:else>
        <image mode="widthFix" src="http://hbimg.b0.upaiyun.com/e1b1467beea0a9c7d6a56b32bac6d7e5dcd914f7c3e6-YTwUd6_fw658" />
        
      </block>
    </view>
  </view>

  <!-- 底部 -->
  <view class="jiesuan">
    <view class="checkone">
      <checkbox-group bindchange="handleAllCheck">
        <checkbox checked="{{allCheck}}">全选</checkbox> 
      </checkbox-group>
    </view>
    <view class="total">
      <view class="totalPrice">合计：￥{{totalPrice}}</view>
      <view class="totalbottom">包含运费</view>
    </view>
    <view class="money"
          bindtap="handlePay"
    >结算({{totalNum}})</view>
  </view>
</view>
