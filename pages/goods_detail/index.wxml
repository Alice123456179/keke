<view class="wrap">
  <!-- 轮播 -->
  <view class="swiper">
    <swiper
    indicator-dots="true" 
    indicator-color="rgba(0,0,0,.3)" 
    autoplay="true" 
    >
      <swiper-item
      wx:for="{{goods.pics}}"
      wx:key="pics_id"
      bindtap="privewTap"
      data-url="{{item.pics_mid}}"
      >
        <image mode="widthFix" src="{{item.pics_mid}}" />
      </swiper-item>
    </swiper>
  </view>
  <!--商品信息 -->
  <view class="price">￥{{goods.goods_price}}</view>
  <view class="Info">
    <view class="name">{{goods.goods_name}}</view>
    <view class="collect">
      <text class="iconfont icon-shoucang"></text>
      <view class="collect_text">收藏</view>
    </view>
  </view>
  <!-- 商品详情 -->
  <view class="detail">
    <view class="title price">图文详情</view>
    <view class="detail_info">
      <rich-text nodes="{{goods.goods_introduce}}">
      </rich-text>
    </view>
  </view>

  <!-- 商品底部 -->
  <view class="bottom">
    <view class="bottom_item one">
      <view class="iconfont icon-kefu"></view>
      <view class="kefu">客服</view>
      <button open-type="contact"></button>
    </view>
    <view class="bottom_item one">
      <view class="iconfont icon-fen_xiang"></view>
      <view class="kefu">分享</view>
      <button open-type="share"></button>

    </view>
    <navigator url="/pages/cart/index" open-type="switchTab" class="bottom_item one">
      <view class="iconfont icon-gouwuche2"></view>
      <view class="kefu">购物车</view>
    </navigator>
    <view class="bottom_item btn-cart" bindtap="addCart">
      加入购物车
    </view>
    <view class="bottom_item btn-buy" bindtap="buy">
      立即购买
    </view>
  </view>

</view>
