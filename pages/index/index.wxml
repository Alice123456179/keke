<view class="home">
  <!-- 搜索开始 -->
  <view class="header">
    <SearchInput></SearchInput>
  </view>
  <!-- 轮播图开始 -->
  <view class="swiper">
    <swiper autoplay="{{true}}" circular="{{true}}" indicator-dots="{{true}}">
      <swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
        <navigator>
          <image mode="widthFix" src="{{item.image_src}}" alt="" />
        </navigator>
      </swiper-item>
    </swiper>
  </view>

  <!-- nav导航 -->
  <view class="nav">
    <navigator wx:for="{{navList}}" wx:key="name">
      <image mode="widthFix" src="{{item.image_src}}" />
    </navigator>
  </view>

  <!-- 楼层 -->
  <view class="floorList">
    <view class="floor" wx:for="{{floorList}}"
      wx:for-item="item1"
      wx:for-index="index1"
      wx:key="floor_title">
      <view class="floorTitle">
          <image mode="widthFix" src="{{item1.floor_title.image_src}}" />
      </view>
      <view class="floorContent">
        <navigator wx:for="{{item1.product_list}}"
          wx:for-item="item2"
          wx:for-index="index2"
          wx:key="name">
          <image mode="{{index2===0?'widthFix':'scaleToFill'}}" src="{{item2.image_src}}" />
        </navigator>
      </view>
    </view>
  </view>



</view>